        @Html.TextBox("txtName", "Test") <br /><br />

        @Html.Password("txtPassword", "1234") <br /><br />

        @Html.Hidden("hdnId", "10") <br /><br />

        @Html.RadioButton("rbCinsiyet", "Erkek", true, new { text = "Erkek" }) Kadın <br />
        @Html.RadioButton("rbCinsiyet", "Kadın", false, new { text = "Erkek" }) Kadın <br /><br />

        @Html.TextArea("txtArea", "Uzun bir metin", new { cols = 50, rows = 5 }) <br /><br />

        @using (Html.BeginForm("UrunEkle", "HtmlHelpers"))
        {
            @*<label>İsim Soyisim: </label>*@
            @Html.Label("İsim Soyisim: ")
            @Html.TextBox("txtNameSurname")

            <input type="submit" value="gönder" />
        }
