}

<!-- MAIN CONTENT -->
<div class="pg-opt">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Ürün Detay</h2>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Shop</a></li>
                    <li class="active">Product description</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="slice bg-white">
    <div class="wp-section shop">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="product-gallery">
                                @if (Model.ProductImage != null && Model.ProductImage.Count > 0)
                                {
                                    var mainImage = Model.ProductImage.First();

                                    <div class="primary-image">
                                        <a href="@mainImage.ImageUrl" class="theater" rel="group">
                                            <img src="@mainImage.ImageUrl" class="img-responsive" alt="">
                                        </a>
                                    </div>
                                    <div class="owl-carousel owl-carousel-5 thumbnail-images style-2">
                                        @foreach (var productImage in Model.ProductImage)
	                                    {
                                            <div class="item">
                                                <a href="@productImage.ImageUrl" class="theater" rel="group">
                                                    <img src="@productImage.ImageUrl" alt="">
                                                </a>
                                            </div>
	                                    }
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="product-info">
                                <h3 class="product-title">@Model.Name</h3>
                                <div class="rating pull-left">
                                    <span class="star voted" rel="1"></span>
                                    <span class="star voted" rel="2"></span>
                                    <span class="star voted" rel="3"></span>
                                    <span class="star voted" rel="4"></span>
                                    <span class="star" rel="5"></span>
                                </div>
                                <span class="review-rating pull-left" style="margin-left:15px;">
                                    <a href="">Read all 23 reviews</a> or
                                    <a href="">Share you oppinion</a>

                                </span>
                                <span class="clearfix"></span>
                                <p>
                                    @Model.Description
                                </p>
                                <hr>
                                <div class="product-price">
                                    @if (Model.DiscountPrice != null && Model.DiscountPrice > 0)
                                    {
                                        <span class="price discount">@Model.OutPrice</span>
                                        <span class="price">@Model.DiscountPrice</span>
                                    }
                                    else
                                    {
                                        <span class="price">@Model.OutPrice</span>
                                    }

                                </div>
                                <input type="number" name="cant" value="1" style="width:60px; text-align:center; margin-right:5px; margin-bottom:15px; height:34px;">
                                <a href="~/Basket/Index?productId=@Model.Id">
                                    <button type="submit" name="submit" class="btn btn-base btn-icon btn-cart">
                                        <span>Add to cart</span>
                                    </button>
                                </a>
                                <button type="submit" class="btn btn-light btn-icon fa-heart">
                                    <span>Whishlist</span>
                                </button>

                                <hr>
                                <div class="product-short-info">
                                    <p><i class="fa fa-heart"></i><strong>Shipping</strong>: Free</p>
                                    <p><i class="fa fa-inbox"></i><strong>Category</strong>: Apple</p>
                                    <p><i class="fa fa-check"></i><strong>Availability</strong>: In Stock</p>
                                    <p><i class="fa fa-tag"></i><strong>Tags</strong>: laptop, notebook, asus</p>
                                </div>
                            </div>
