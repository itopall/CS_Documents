                    @if (Model.BasketDetails != null && Model.BasketDetails.Count > 0)
                    {
                        <table class="table table-cart table-responsive">
                            <tbody>

                                @foreach (var basketDetail in Model.BasketDetails)
                                {
                                    <tr>
                                        <td><img src="/Content/images/prv/product-3.png" class="img-center" alt=""></td>
                                        <td><a href="~/Product/Detail/@basketDetail.ProductId">@basketDetail.Product.Name</a></td>
                                        <td>@basketDetail.Product.OutPrice</td>
                                        <td>
                                            <input type="number" name="cant" value="@basketDetail.Quantity" style="width:60px; text-align:center; margin-right:5px; height:34px;">
                                        </td>
                                        <td>@(basketDetail.Product.OutPrice * basketDetail.Quantity)</td>
                                        <td class="remove-cell"><a href="~/Basket/RemoveProduct?productId=@basketDetail.ProductId" class="cart-remove" title="Sil"><i class="fa fa-times-circle fa-2x"></i></a></td>
                                    </tr>
                                }

