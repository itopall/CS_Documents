@model ETrade.Dto.Dto.FrontEndHome.FrontEndHomeDto
@{
    ViewBag.Title = "Home Page";
}

<section class="slice bg-white bb">
    <div class="wp-section">
        <div class="container">
            <div class="section-title-wr">
                <h3 class="section-title left"><span>Ürünler</span></h3>
            </div>
            <div class="row">
                @foreach (var product in Model.ProductList)
                {
                    <div class="col-md-3">
                        <div class="wp-block product">
                            <figure>

                                @if (product.ProductImage != null && product.ProductImage.Count > 0)
                                {
                                    <img alt="" src="@product.ProductImage.First().ImageUrl" class="img-responsive img-center">
                                }
                                else
                                {
                                    <img alt="" src="~/Content/images/prv/product-1.jpg" class="img-responsive img-center">
                                }


                                @if (product.DiscountPrice != null)
                                {
                                    <span class="ribbon base-alt">İndirimde</span>
                                }
                            </figure>

                            <h2 class="product-title"><a href="~/Product/Detail/@product.Id">@product.Name</a></h2>

                            <p>
                                @product.Description
                            </p>

                            <div class="wp-block-footer">
                                @if (product.DiscountPrice != null)
                                {
                                    <span class="price discount pull-left">@product.OutPrice</span>
                                    <span class="price pull-left">@product.DiscountPrice</span>
                                }
                                else
                                {
                                    <span class="price pull-left">@product.OutPrice</span>
                                }
                                <a href="~/Basket/Index?productId=@product.Id" class="btn btn-sm btn-base btn-icon btn-cart pull-right">
                                    <span>Sepete Ekle</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

