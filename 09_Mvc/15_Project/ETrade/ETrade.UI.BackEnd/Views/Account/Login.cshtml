@model ETrade.Dto.Dto.Account.LoginDto
@{
    Layout = "~/Views/Shared/_AnonymousLayout.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <a href="~/Account/Login"><b>E</b>Trade</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Kullanıcı bilgilerinizi giriniz</p>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "frmLogin" }))
            {
                <div class="input-group mb-3">
                    @Html.TextBoxFor(p => p.UsernameOrEmail, new { @class = "form-control", @placeholder = "Kullanıcı Adı/Email" })
                    @*<input type="email" class="form-control" placeholder="Email">*@
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.PasswordFor(p => p.Password, new { @class = "form-control", @placeholder = "Şifre" })
                    @*<input type="password" class="form-control" placeholder="Password">*@
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember">
                                Beni Hatırla
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Giriş</button>
                    </div>
                    <!-- /.col -->
                </div>
            }

            @*<div class="social-auth-links text-center mb-3">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                    </a>
                </div>*@
            <!-- /.social-auth-links -->

            <p class="mb-1">
                @if (Model.ErrorMessage != null)
                {
                    <div style="color:red;">@Model.ErrorMessage</div>
                }
            </p>

            <br />

            <p class="mb-1">
                <a href="forgot-password.html">Şifremi Unuttum</a>
            </p>
            <p class="mb-0">
                <a href="register.html" class="text-center">Yeni Üyelik</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>

