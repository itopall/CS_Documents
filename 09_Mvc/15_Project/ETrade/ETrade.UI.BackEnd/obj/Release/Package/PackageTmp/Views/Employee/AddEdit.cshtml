@model ETrade.Dto.Dto.Employee.EmployeeDto
@{
    ViewBag.Title = "AddEdit";
}

@section styles{
    <style></style>
}

@section scripts{
    <script>
        $(function () {
            $('#reservationdate').datetimepicker({
                format: 'L',
                language: "tr",
                //format: 'dd/mm/yyyy'
            });
        })

