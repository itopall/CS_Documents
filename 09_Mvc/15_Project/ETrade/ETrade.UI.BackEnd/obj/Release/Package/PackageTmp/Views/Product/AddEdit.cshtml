@model ETrade.Dto.Dto.Product.ProductDto
@{
    ViewBag.Title = "AddEdit";
}

@section styles{
    <style></style>
}

@section scripts{
    <script>
    </script>
}



@using (Html.BeginForm("AddEdit", "Product", FormMethod.Post, new { @id = "frmSave" }))
{
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Ekleme/Güncelleme Formu</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            @* 1. Satır *@
            <div class="form-group row">
                @Html.LabelFor(p => p.CategoryId, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-3">
                    @Html.DropDownListFor(p => p.CategoryId, new SelectList(Model.CategoryList, "Id", "Name"), "Seçiniz..", new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.CategoryId)
                </div>

                <div class="col-sm-1"></div>

                @Html.LabelFor(p => p.SupplierId, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-3">
                    @Html.DropDownListFor(p => p.SupplierId, new SelectList(Model.SupplierList, "Id", "Name"), "Seçiniz..", new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.SupplierId)
                </div>
            </div>

            @* 2. Satır *@
            <div class="form-group row">
                @Html.LabelFor(p => p.Name, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(p => p.Name, new { @class = "form-control", @placeholder = "Ürün Adı" })
                    @Html.ValidationMessageFor(p => p.Name)
                </div>

                <div class="col-sm-1"></div>

                @Html.LabelFor(p => p.InPrice, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(p => p.InPrice, new { @class = "form-control", @placeholder = "Geliş Fiyatı" })
                @Html.ValidationMessageFor(p => p.InPrice)
            </div>
            </div>

            @* 3. Satır *@
            <div class="form-group row">
                @Html.LabelFor(p => p.OutPrice, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(p => p.OutPrice, new { @class = "form-control", @placeholder = "Satış Fiyatı" })
                    @Html.ValidationMessageFor(p => p.OutPrice)
                </div>

                <div class="col-sm-1"></div>

                @Html.LabelFor(p => p.DiscountPrice, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(p => p.DiscountPrice, new { @class = "form-control", @placeholder = "İndirimli Fiyat" })
                    @Html.ValidationMessageFor(p => p.DiscountPrice)
                </div>
            </div>

            @* 4. Satır *@
            <div class="form-group row">
                @Html.LabelFor(p => p.StockCount, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(p => p.StockCount, new { @class = "form-control", @placeholder = "Stok Sayısı", @type = "number" })
                    @Html.ValidationMessageFor(p => p.StockCount)
                </div>

                <div class="col-sm-1"></div>

                @Html.LabelFor(p => p.ClickedCount, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(p => p.ClickedCount, new { @class = "form-control", @placeholder = "Tıklanma Sayısı", @type = "number", @readonly = "true" })
                </div>
            </div>

            @* 5. Satır *@
            <div class="form-group row">
                @Html.LabelFor(p => p.IsActive, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-3">
                    @Html.CheckBoxFor(p => p.IsActive, new { @placeholder = "Aktif Mi" })
                </div>

                <div class="col-sm-1"></div>

                @Html.LabelFor(p => p.Description, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-3">
                    @Html.TextAreaFor(p => p.Description, new { @class = "form-control", @placeholder = "Açıklama" })
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <a href="~/Product/Index" class="btn btn-primary">Listeye Dön</a>
            <input type="submit" class="btn btn-success" id="btnSave" value="Kaydet" />
        </div>
        <!-- /.card-footer-->
    </div>
}

