@model ETrade.Dto.Dto.Category.CategorySearchDto

@if (Model.Categories != null && Model.Categories.Count > 0)
{
    <table id="grdList" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Kategori Adı</th>
                <th>Aktif Mi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>
                        <a class="btn btn-info btn-sm" href="~/Category/AddEdit/@item.Id">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Güncelle
                        </a>
                        <a class="btn btn-danger btn-sm" href="~/Category/Delete/@item.Id">
                            <i class="fas fa-trash">
                            </i>
                            Sil
                        </a>
                    </td>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.IsActive</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Kategori Adı</th>
                <th>Aktif Mi</th>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div>Hiç kayıt bulunamadı...</div>
}


<script>
    $(function () {
        $("#grdList").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#grdList_wrapper .col-md-6:eq(0)');
    });
</script>