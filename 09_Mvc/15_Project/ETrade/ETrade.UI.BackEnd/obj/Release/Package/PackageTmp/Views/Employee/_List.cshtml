@model ETrade.Dto.Dto.Employee.EmployeeSearchDto

@if (Model.Employees != null && Model.Employees.Count > 0)
{
    <table id="grdList" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Foto</th>
                <th>Id</th>
                <th>İsim Soyisim</th>
                <th>Kullanıcı Adı</th>
                <th>Ünvan</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Aktif Mi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employees)
            {
            <tr>
                <td>
                    <a class="btn btn-info btn-sm" href="~/Employee/AddEdit/@item.Id">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Güncelle
                    </a>
                    <a class="btn btn-danger btn-sm" href="~/Employee/Delete/@item.Id">
                        <i class="fas fa-trash">
                        </i>
                        Sil
                    </a>
                </td>
                <td><img src="@item.ImageUrl" width="48" height="48" /></td>
                <td>@item.Id</td>
                <td>@item.Namesurname</td>
                <td>@item.Username</td>
                <td>@item.Title</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.IsActive</td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th></th>
                <th>Foto</th>
                <th>Id</th>
                <th>İsim Soyisim</th>
                <th>Kullanıcı Adı</th>
                <th>Ünvan</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Aktif Mi</th>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div>Hiç kayıt bulunamadı...</div>
}


<script>
    $(function () {
        $("#grdList").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#grdList_wrapper .col-md-6:eq(0)');
    });
</script>